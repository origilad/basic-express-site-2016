{
  "name": "simple-website-2016",
  "version": "1.0.0",
  "description": "A simple website in node js",
  "private": "true",
  "main": "server.js",
  "scripts": {
    "build-css": "stylus public/stylesheets/layout.styl -o static/css",
    "watch-css": "stylus public/stylesheets/layout.styl -o static/css -w",
    "clean": "rm -rf static/css && mkdir -p static/css",
    "build": "npm run clean && npm run build-css",
    "watch": "npm run clean && npm run watch-css & nodemon server -e js,jade",
    "start": "node server"
  },
  "author": "Ben Gourley",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.15.2",
    "dialog": "^0.2.0",
    "express": "^4.14.0",
    "forms": "^1.2.0",
    "geoip-lite": "^1.1.8",
    "jade-bootstrap": "^1.0.9",
    "jsonfile": "^2.4.0",
    "morgan": "^1.7.0",
    "multer": "^1.2.0",
    "nib": "^1.1.2",
    "node-geocoder": "^3.15.1",
    "nodemon": "^1.9.2",
    "pug": "^2.0.0-beta6",
    "pug-bootstrap": "0.0.3",
    "stylus": "^0.54.5"
  }
}
